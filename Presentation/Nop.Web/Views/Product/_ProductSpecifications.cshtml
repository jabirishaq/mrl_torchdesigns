@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-specs-box">
        <div class="title">
            <strong>@T("Products.Specs")</strong>
        </div>
        <table class="data-table">
            <colgroup>
                <col width="25%" />
                <col />
            </colgroup>
            <tbody>
                @foreach (var item in Model)
                {
                    foreach (var grlist in @item.Grouplist)
                    {
                        <tr><td>@grlist.GroupName</td></tr>
                        foreach (var specification in @grlist.SpecificatioAttribute)
                        {
                            <tr>
                                <td>@specification.SpecificationAttributeName</td>
                                <td>@specification.SpecificationAttributeOption</td>
                            </tr>
                        }
                    }
                }
                @*@for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr @(i % 2 == 0 ? Html.Raw(" class=\"odd\"") : Html.Raw(" class=\"even\""))>
                            <td class="a-left spec-name">
                                @item.SpecificationAttributeName
                            </td>
                            <td class="a-left spec-value">
                                @item.SpecificationAttributeOption
                            </td>
                        </tr>
                    }*@
            </tbody>
        </table>
    </div>
}