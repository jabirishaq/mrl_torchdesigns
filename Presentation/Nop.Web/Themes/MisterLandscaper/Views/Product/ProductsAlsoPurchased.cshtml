@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{

    <div class="also-purchased-products-grid">
        <div class="productdetailhidedivheader">
            <strong>@T("Products.AlsoPurchased")</strong>
        </div>
    <div class="Alsoslidermaindiv">
        <script>
           $(function () {
                $('.Alsocarousel').jcarousel({
                    list: '.Alsocontainer',
                    items: '.item-box'
                });

            });
        </script>
        <div class="Alsocarousel">
            <div class="Alsocontainer">

                @foreach (var item in Model)
                {  <div class="item-box">
                    @Html.Partial("_AlsopurchasedProductbox", item)
                </div>
                }
            </div>
        </div>
        <a href="#" class="Alsojcarousel-control-prev"></a>
        <a href="#" class="Alsojcarousel-control-next"></a>
    </div>
                </div>
}


